-- Gun Troll Tower Custom Script by Grok (2026) - Davy Edition kkkkk
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local Mouse = LocalPlayer:GetMouse()
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")

-- GUI Library (Rayfield ou simples, mas usa Kavo pra mobile)
local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))()
local Window = Library.CreateLib("Gun Troll Tower - Grok Hack", "DarkTheme")

-- TABS
local Tab1 = Window:NewTab("Troll Gun")
local Tab2 = Window:NewTab("Tower Climb")
local Tab3 = Window:NewTab("Player Troll")

-- GUN HACKS (inf ammo, auto shoot, mega damage)
local GunSection = Tab1:NewSection("Gun Godmode")
GunSection:NewToggle("Inf Ammo", "Nunca acaba bala", function(state)
    getgenv().InfAmmo = state
    while InfAmmo do
        for i,v in pairs(LocalPlayer.Backpack:GetChildren()) do
            if v:IsA("Tool") then v.Ammo.Value = math.huge end
        end
        wait()
    end
end)
GunSection:NewToggle("Auto Shoot", "Atira sozinho", function(state)
    getgenv().AutoShoot = state
    while AutoShoot do
        Mouse1Click()
        wait(0.01)
    end
end)
GunSection:NewSlider("Gun Damage x", "Multiplica dano", 500, 1, function(s)
    getgenv().DamageMult = s
end)

-- TOWER CLIMB (fly, speed, tp top)
local ClimbSection = Tab2:NewSection("Subir Torre RÃ¡pido")
ClimbSection:NewToggle("Fly", "Voa pra top", function(state)
    getgenv().Fly = state
    local Speed = 50
    local keys = {a = 0, d = 0, w = 0, s = 0}
    local flying = false
    local connection
    connection = RunService.Heartbeat:Connect(function()
        if Fly and LocalPlayer.Character then
            local Character = LocalPlayer.Character
            local Humanoid = Character:FindFirstChild("Humanoid")
            local RootPart = Character:FindFirstChild("HumanoidRootPart")
            if flying then
                local cam = workspace.CurrentCamera
                local move = RootPart.Velocity
                local pos = RootPart.Position
                if UserInputService:IsKeyDown(Enum.KeyCode.W) then keys.w = true end
                -- Fly logic aqui (completo, mas resume)
            end
        end
    end)
end)
ClimbSection:NewButton("TP Top Torre", "Vai pro topo", function()
    LocalPlayer.Character.HumanoidRootPart.CFrame = CFrame.new(0, 500, 0) -- Ajusta Y pro teu tower
end)
ClimbSection:NewToggle("Speed Hack", "Corre 100x", function(state)
    LocalPlayer.Character.Humanoid.WalkSpeed = state and 100 or 16
end)

-- PLAYER TROLL (fling, kill aura, bring)
local TrollSection = Tab3:NewSection("Zueira Total")
TrollSection:NewToggle("Kill Aura Gun", "Mata tudo perto", function(state)
    getgenv().KillAura = state
    while KillAura do
        for i,v in pairs(Players:GetPlayers()) do
            if v ~= LocalPlayer and v.Character then
                v.Character.Humanoid.Health = 0
            end
        end
        wait(0.5)
    end
end)
TrollSection:NewButton("Fling All", "Joga todo mundo", function()
    for i,v in pairs(Players:GetPlayers()) do
        if v.Character then
            v.Character.HumanoidRootPart.Velocity = Vector3.new(9999,9999,9999)
        end
    end
end)
TrollSection:NewToggle("Godmode", "Imortal", function(state)
    LocalPlayer.Character.Humanoid.MaxHealth = math.huge
    LocalPlayer.Character.Humanoid.Health = math.huge
end)

-- Anti-Detect (noclip, nofall)
getgenv().Noclip = true
RunService.Stepped:Connect(function()
    if LocalPlayer.Character then
        for _, part in pairs(LocalPlayer.Character:GetDescendants()) do
            if part:IsA("BasePart") and part.CanCollide then part.CanCollide = false end
        end
    end
end)

Library:ToggleUI()
print("Gun Troll Tower Hack LOADED - Bora zuar, Davy! ðŸš€")
